<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:radius="16dp"
    app:cardElevation="8dp"
    android:padding="20dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/clearChatTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear Chat?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/clearChatDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This will delete all messages in this chat. Are you sure?"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/btnCancelClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:background="@color/gray"
                android:textColor="@android:color/white"
                android:padding="8dp"/>

            <Button
                android:id="@+id/btnConfirmClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear"
                android:background="@color/red"
                android:textColor="@android:color/white"
                android:padding="8dp"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
